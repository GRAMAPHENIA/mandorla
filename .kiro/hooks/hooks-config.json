{
  "formateo_automatico": {
    "descripcion": "Configuración para hooks de formateo automático",
    "hooks_activos": [
      "auto-format-on-save.kiro.hook",
      "prettier-formatter.kiro.hook",
      "eslint-integration.kiro.hook",
      "naming-conventions-validator.kiro.hook"
    ],
    "patrones_archivos": [
      "src/**/*.{ts,tsx,js,jsx}",
      "types/**/*.ts",
      "lib/**/*.ts",
      "scripts/**/*.{js,ts}"
    ],
    "configuracion_prettier": {
      "semi": true,
      "trailingComma": "es5",
      "singleQuote": true,
      "printWidth": 100,
      "tabWidth": 2,
      "useTabs": false,
      "bracketSpacing": true,
      "bracketSameLine": false,
      "arrowParens": "avoid",
      "endOfLine": "lf"
    },
    "reglas_eslint": {
      "typescript": true,
      "react": true,
      "next": true,
      "imports_organizados": true,
      "variables_no_usadas": true
    },
    "convenciones_nomenclatura": {
      "componentes": "PascalCase en español",
      "variables": "camelCase en español",
      "funciones": "camelCase con verbos en español",
      "tipos": "PascalCase con sufijo descriptivo",
      "archivos": "kebab-case para utilidades",
      "carpetas": "kebab-case para módulos"
    }
  },
  "documentacion_automatica": {
    "descripcion": "Configuración para hooks de documentación automática",
    "hooks_activos": [
      "update-component-docs.kiro.hook",
      "api-documentation-generator.kiro.hook",
      "architecture-diagram-updater.kiro.hook",
      "documentation-integrator.kiro.hook",
      "documentation-validator.kiro.hook",
      "documentation-template-generator.kiro.hook",
      "documentation-sync.kiro.hook"
    ],
    "patrones_archivos": {
      "componentes": [
        "src/components/**/*.{tsx,ts}",
        "src/modules/**/presentation/**/*.{tsx,ts}",
        "src/shared/components/**/*.{tsx,ts}"
      ],
      "apis": [
        "src/app/api/**/*.{ts,js}",
        "src/pages/api/**/*.{ts,js}",
        "src/modules/**/infrastructure/api/**/*.{ts,js}"
      ],
      "arquitectura": [
        "src/modules/**/domain/**/*.ts",
        "src/modules/**/application/**/*.ts",
        "src/modules/**/infrastructure/**/*.ts",
        "src/modules/**/presentation/**/*.tsx"
      ],
      "documentacion": [
        "docs/**/*.md",
        "src/**/*.docs.md",
        "src/**/*.api.md"
      ]
    },
    "estructura_documentacion": {
      "directorio_base": "docs/",
      "componentes": "docs/components/",
      "apis": "docs/apis/",
      "arquitectura": "docs/architecture/",
      "guias": "docs/guides/",
      "ejemplos": "docs/examples/"
    },
    "formatos_salida": {
      "componentes": "*.docs.md",
      "apis": "*.api.md",
      "diagramas": "*.md con bloques mermaid",
      "indices": "README.md en cada carpeta"
    },
    "validacion_documentacion": {
      "idioma_requerido": "español",
      "terminologia_negocio": true,
      "ejemplos_obligatorios": true,
      "tabla_props_requerida": true,
      "enlaces_cruzados": false,
      "metadatos_requeridos": true
    },
    "plantillas_automaticas": {
      "generar_al_crear": true,
      "incluir_ejemplos_negocio": true,
      "generar_diagramas_mermaid": true,
      "incluir_notas_accesibilidad": true,
      "contexto_panaderia": true
    },
    "sincronizacion": {
      "actualizar_props": true,
      "actualizar_tipos": true,
      "preservar_contenido_personalizado": true,
      "actualizar_enlaces_automaticamente": true,
      "validar_despues_sincronizar": true
    }
  },
  "testing_automatico": {
    "descripcion": "Configuración para hooks de testing automático",
    "hooks_activos": [
      "run-related-tests.kiro.hook",
      "coverage-validator.kiro.hook",
      "integration-tests-trigger.kiro.hook",
      "test-reports-generator.kiro.hook"
    ],
    "patrones_archivos": {
      "codigo_fuente": [
        "src/**/*.{ts,tsx}",
        "types/**/*.ts",
        "lib/**/*.ts"
      ],
      "tests": [
        "src/**/*.test.{ts,tsx}",
        "src/**/*.spec.{ts,tsx}",
        "src/**/*.integration.test.{ts,tsx}"
      ],
      "configuracion": [
        "jest.config.js",
        "jest.setup.js"
      ],
      "criticos": [
        "src/modules/**/application/**/*.ts",
        "src/modules/**/infrastructure/**/*.ts",
        "src/app/api/**/*.ts",
        "src/stores/**/*.ts",
        "src/components/checkout/**/*.tsx",
        "src/components/cart/**/*.tsx",
        "src/components/products/**/*.tsx"
      ]
    },
    "umbrales_cobertura": {
      "domain": {
        "lines": 85,
        "functions": 85,
        "branches": 85,
        "statements": 85
      },
      "application": {
        "lines": 80,
        "functions": 80,
        "branches": 80,
        "statements": 80
      },
      "infrastructure": {
        "lines": 70,
        "functions": 70,
        "branches": 70,
        "statements": 70
      },
      "components": {
        "lines": 75,
        "functions": 75,
        "branches": 70,
        "statements": 75
      },
      "hooks": {
        "lines": 80,
        "functions": 80,
        "branches": 75,
        "statements": 80
      },
      "utils": {
        "lines": 70,
        "functions": 75,
        "branches": 65,
        "statements": 70
      }
    },
    "configuracion_jest": {
      "testTimeout": 10000,
      "maxWorkers": "50%",
      "cache": true,
      "verbose": true,
      "collectCoverage": true,
      "coverageReporters": ["text", "json", "html"],
      "coverageDirectory": "coverage"
    }
  },
  "orden_ejecucion": {
    "formateo": [
      "prettier-formatter",
      "eslint-integration", 
      "naming-conventions-validator",
      "auto-format-on-save"
    ],
    "documentacion": [
      "documentation-template-generator",
      "update-component-docs",
      "api-documentation-generator",
      "architecture-diagram-updater",
      "documentation-sync",
      "documentation-validator",
      "documentation-integrator"
    ],
    "testing": [
      "run-related-tests",
      "coverage-validator",
      "integration-tests-trigger",
      "test-reports-generator"
    ]
  },
  "configuracion_global": {
    "ejecutar_en_paralelo": false,
    "detener_en_error": false,
    "mostrar_progreso": true,
    "backup_antes_formateo": false,
    "generar_indices_automaticos": true,
    "validar_enlaces_cruzados": true,
    "crear_metadatos": true
  }
}